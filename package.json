{
    "name": "pixijs-game-ui",
    "version": "1.0.0",
    "type": "module",
    "description": "A simple PixiJS game UI project.",
    "author": {
        "name": "CyberDex",
        "url": "https://github.com/CyberDex"
    },
    "scripts": {
        "start": "vite --open --host",
        "build": "tsc && vite build",
        "preview": "npm run build && vite preview --open",
        "lint": "eslint --ext .js,.ts,.tsx src",
        "lint:fix": "eslint --ext .js,.ts,.tsx src --fix",
        "format": "prettier --write src/**/*.{ts}"
    },
    "dependencies": {
        "@pixi/app": "^7.3.1",
        "@pixi/assets": "^7.3.1",
        "@pixi/core": "^7.3.1",
        "@pixi/display": "^7.3.1",
        "@pixi/events": "^7.3.1",
        "@pixi/filter-motion-blur": "^5.1.1",
        "@pixi/graphics": "^7.3.1",
        "@pixi/layout": "^0.3.3",
        "@pixi/particle-emitter": "^5.0.8",
        "@pixi/sprite": "^7.3.1",
        "@pixi/sprite-tiling": "^7.3.1",
        "@pixi/spritesheet": "^7.3.1",
        "@pixi/text": "^7.3.1",
        "@pixi/text-bitmap": "^7.3.1",
        "@pixi/ui": "^0.7.4",
        "eruda": "^3.0.1",
        "eslint-plugin-no-mixed-operators": "^1.1.1",
        "gsap": "^3.11.4",
        "matter-js": "^0.19.0",
        "pixi-stats": "^1.2.2",
        "stats.js": "^0.17.0",
        "typed-signals": "^2.5.0"
    },
    "devDependencies": {
        "@types/matter-js": "^0.18.2",
        "@types/stats.js": "^0.17.1",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-jsdoc": "^46.4.3",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "prettier": "^2.8.3",
        "typescript": "^5.2.2",
        "vite": "^4.0.0"
    }
}
